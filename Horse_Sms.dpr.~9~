program Horse_Sms;

{$APPTYPE CONSOLE}

{$R *.res}

uses Horse, System.SysUtils, Horse.Jhonson, System.JSON, CPort;

begin

  var
    dados: TJSONArray;

  THorse.Use(Jhonson);
  THorse.Get('/sms/:numero/:mensagem',
    procedure(Req: THorseRequest; Res: THorseResponse; Next: TProc)

    var
      NumeroTelefone: String;
      MensagemTexto: String;
      ComPort: TComPort;

    begin

      NumeroTelefone := Req.Params['numero'];
      MensagemTexto := Req.Params['mensagem'];

      ComPort := TComPort.Create(nil);
      ComPort.Port := 'COM7'; // defina a porta serial do Arduino
      ComPort.BaudRate := br9600; // defina a taxa de transferência
      ComPort.Connected := True; // conecta à porta serial
      Comport.WriteStr(NumeroTelefone);
      Comport.WriteStr(MensagemTexto);

      Res.Send('Número: ' + NumeroTelefone + ' | Mensagem: '+ MensagemTexto);
      end);

  THorse.Listen(9000);
end.
